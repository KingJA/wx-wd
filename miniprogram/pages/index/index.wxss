/* pages/index/index.wxss */

@import "../../templates/question-list-template/question-list-template.wxss";
.publish-wrap {

  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 100%;
  background-color: blueviolet;
  display: flex;
  justify-content: center;
  align-items: center;
}

.publish-wrap image {

  width: 50rpx;
  height: 50rpx;

}

.publish-wrap text {
  color: #fff;
  font-size: 24rpx;

}

/* 搜索栏 */
.search-container{
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #F5F6F8;
  border-radius: 40rpx;
  padding: 20rpx 40rpx;
  margin: 10rpx 40rpx 10rpx;
  }
  
  .search-container image{
    width: 32rpx;
    height: 32rpx;
  }
  
  .search-container text{
    flex: 1;
    margin-left: 20rpx;
    font-size: 25rpx;
    color: #999;
  }
